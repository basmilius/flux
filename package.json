{
    "name": "flux-workspace",
    "private": true,
    "scripts": {
        "build": "pnpm run -C packages/flux build",
        "dev": "pnpm run -C packages/flux dev",
        "docs:build": "pnpm run -C packages/docs build",
        "docs:dev": "pnpm run -C packages/docs dev",
        "link": "pnpm link --dir packages/flux --global",
        "publish": "pnpm --filter '@basmilius/*' -r publish --access public --no-git-checks"
    },
    "engines": {
        "node": ">=21"
    },
    "packageManager": "pnpm@9.9.0",
    "devDependencies": {
        "@types/lodash": "^4.17.7",
        "@types/luxon": "^3.4.2",
        "@types/node": "^22.5.1"
    }
}
